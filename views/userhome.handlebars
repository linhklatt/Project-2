<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

{{#if characters.length}}
<div class="character-list">
  {{#each characters as |character| }}
  <div class="row mb-4">
    <div class="col-md-5">
      <p>{{character.name}} {{character.role}} </p>
    </div>
    <div>
      <button class="btn btn-sm btn-danger" data-id="{{character.id}}">DELETE</button>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}

<div class="create-character">
    <button>CREATE A CHARACTER</button>
</div>

<div class="play-game">
    <button>PLAY</button>
</div>

<script src="./js/userhome.js"></script>