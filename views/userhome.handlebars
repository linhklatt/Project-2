<div class="userhome-container">
  <div class="row">
    <div class="col-auto">
      <h2>Welcome, {{username}}!</h2>
    </div>
  </div>

  {{#if characters.length}}
  <div class="player-character-list">
    {{#each characters as |character|}}
      <div class="player-character-tile">
        <div class="player-character" id="player-character-{{character.id}}">
          <p char-id={{character.id}}>
            <span img-id="img-{{character.id}}">{{{get_sprite character.role}}}</span>
            {{character.name}}
            {{character.role}}
          </p>
        </div>
      </div>
    {{/each}}
  </div>
  {{/if}}

  <div id="btn">
    <div class="create-character">
      <button>CREATE A CHARACTER</button>
    </div>
    <div class="play-game">
      <button id="play-btn">PLAY</button>
    </div>
    <div class="delete-character">
      <button id="delete-btn">DELETE</button>
    </div>
  </div>

  {{!-- Modal for alerting not selecting a character --}}
    <div id="confirmModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Character Select</h5>
                  <button class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="c-modal-body">
                <p></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-dismiss="modal" id="confirm-delete">
                  Ok
                </button>
                <button class="btn btn-secondary" data-dismiss="modal" id="cancel">
                  Close
                </button>
            </div>
        </div>
    </div>
</div>

<script src="./js/userhome.js"></script>