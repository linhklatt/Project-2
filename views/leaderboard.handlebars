<div class="leaderboard">
  <h2>All Characters</h2>
  <div class="leaderboard-row" id="leaderboard-col-head">
    <div class="lb-col">
      <p>ROLE</p>
    </div>
    <div class="lb-col">
      <p>CHARACTER NAME</p>
    </div>
    <div class="lb-col">
      <p>USER</p>
    </div>
    <div class="lb-col">
      <p>STATS</p>
    </div>
    <div class="lb-col">
      <p>WINS</p>
    </div>
  </div>
  {{#each characters as |character| }}
  <div class="leaderboard-row">
    <div class="lb-col">
      <div class="lb-img {{{get_static_right character.role}}}"></div>
    </div>
    <div class="lb-col">
      <p>{{character.name}}</p>
    </div>
    <div class="lb-col">
      <p>{{character.user.username}}</p>
    </div>
    <div class="lb-col">
      <ul>
        <li>hp: {{character.health}}</li>
        <li>atk: {{character.attack}}</li>
        <li>ctr: {{character.counter}}</li>
      </ul>
    </div>
    <div class="lb-col">
      <p>{{character.wins}}</p>
    </div>
  </div>
  {{/each}}
</div>